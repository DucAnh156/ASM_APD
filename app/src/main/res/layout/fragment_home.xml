<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_home"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5">

            <ImageView
                android:id="@+id/icon_x"
                android:layout_alignParentStart="true"
                android:src="@drawable/logo_btec"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duc Anh Do"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_toEndOf="@id/icon_x"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:backgroundTint="#FFA500"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background">

            <TextView
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="34sp"
                android:text="VISA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_full_name"
                android:textColor="@android:color/white"
                android:textSize="34sp"
                android:text="DINH VAN DONG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_balance"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="34sp"
                android:text="1.200.000 VND"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/btn_Information"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/blue"
                android:layout_weight="1"
                android:text="Information"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_Notifacation"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Notification"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/btn_add_category"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:layout_marginEnd="8dp"
                android:text="Add Category"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btn_add_expense"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/blue"
                android:text="Add Expense"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btn_display_expenses"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:layout_marginEnd="8dp"
                android:text="Display Expense"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>